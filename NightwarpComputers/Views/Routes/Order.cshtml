<div class="pageHeader">{{message}}</div>

<form class="main" name="orderRequest" ng-hide="orderReview" ng-submit="reviewOrder()">
    <div class="sectionHeading">Contact Information</div>
    <div class="grid">
        <div>First and Last Name:</div>
        <div>
            <input type="text" id="name" required ng-model="name" />
        </div>
        <div>Phone Number:</div>
        <div>
            <input type="text" id="phone" placeholder="(Optional)" ng-model="phone" />
        </div>
        <div>Email Address:</div>
        <div>
            <input type="email" id="email" required ng-model="email" />
        </div>
        <div>Contact Method Preference:</div>
        <div>
            <input type="checkbox" id="emailContact" value="Email" ngTrueValue="Email" ng-model="emailPref">Email
            <input type="checkbox" id="phoneContact" value="Phone" ngTrueValue="Phone" ng-model="phonePref">Phone
        </div>
    </div>
    <div class="sectionHeading">Order Information</div>
    <div class="grid">
        <label class="radio">
            <input type="radio" name="buildType" required value="orderOnly" ngClick="orderOnly" ng-model="buildType">Order Only
        </label>
        <label class="radio">
            <input type="radio" name="buildType" required value="buildOnly" ngClick="buildOnly" ng-model="buildType">Build Only
        </label>
        <label class="radio">
            <input type="radio" name="buildType" required value="orderBuild" ngClick="orderBuild" ng-model="buildType">Order and Build
        </label>
    </div>
    <div class="grid" ng-show="buildType == 'orderOnly' || buildType == 'orderBuild'">
        <div>Usage Expectation:</div>
        <div>
            <select ng-model="useType">
                <option value="Gaming">Gaming</option>
                <option value="Basic, Every Day Use">Basic, Every Day Use</option>
                <option value="Audio/Video Production">Audio/Video Production</option>
            </select>
        </div>
        <div>Price Limit:</div>
        <div>
            <input type="text" id="priceLimit" format ng-model="priceLimit" />
        </div>
        <label class="radio" ng-show="buildType == 'buildOnly' || buildType == 'orderBuild'" style="grid-column: 1 / span 2;">
            <input type="radio" name="deliveryType" value="ship" ng-model="deliveryType">Ship
        </label>
        <label class="radio" ng-show="buildType == 'buildOnly' || buildType == 'orderBuild'" style="grid-column: 3 / span 2;">
            <input type="radio" name="deliveryType" value="pickup" ng-model="deliveryType">Pickup
        </label>
    </div>
    <div class="grid" ng-show="deliveryType == 'ship' || buildType == 'orderOnly'">
        <div class="sectionHeading" style="grid-column: 1 / span 4;">Shipping Information</div>
        <div>Street Address 1:</div>
        <div>
            <input type="text" id="address" ng-model="streetAddress1" />
        </div>
        <div>City:</div>
        <div>
            <input type="text" id="city" ng-model="city" />
        </div>
        <div>Street Address 2:</div>
        <div>
            <input type="text" id="streetAddress2" placeholder="(Optional)" ng-model="streetAddress2" />
        </div>
        <div>State:</div>
        <div>
            <input type="text" id="state" ng-model="state" />
        </div>

        <div>Zip:</div>
        <div>
            <input type="number" id="zip" ng-model="zip" />
        </div>
    </div>
    <br />
    <div class="grid" ng-show="buildType == 'buildOnly' || buildType == 'orderBuild'">
        <div class="sectionHeading" style="grid-column: 1 / span 4;">Build Information</div>
        <label class="radio">
            <input type="radio" name="partPreference" value="upload" ng-model="partPreference">Upload Parts List
        </label>
        <label class="radio">
            <input type="radio" name="partPreference" value="preferences" ng-model="partPreference">Select Preferences
        </label>
        <label class="radio">
            <input type="radio" name="partPreference" value="noPreference" ng-model="partPreference">No Preferences
        </label>
    </div>
    <div class="grid" ng-show="partPreference == 'preferences'">
        <div>Processor Type:</div>
        <div>
            <select name="processorType" ng-model="processorType">
                <option value="AMD">AMD (AM4 socket)</option>
                <option value="Intel">Intel (LGA 1151)</option>
            </select>
        </div>
        <div>Processor Model:</div>
        <div>
            <select name="processorModel" ng-disabled="processorType != 'AMD' && processorType != 'Intel'" ng-model="processorModel">
                <option ng-show="processorType == 'AMD'" value="Ryzen 3">Ryzen 3</option>
                <option ng-show="processorType == 'AMD'" value="Ryzen 5">Ryzen 5</option>
                <option ng-show="processorType == 'AMD'" value="Ryzen 7">Ryzen 7</option>
                <option ng-show="processorType == 'AMD'" value="Ryzen Threadripper">Ryzen Threadripper</option>
                <option ng-show="processorType == 'Intel'" value="i3">i3</option>
                <option ng-show="processorType == 'Intel'" value="i5">i5</option>
                <option ng-show="processorType == 'Intel'" value="i7">i7</option>
                <option ng-show="processorType == 'Intel'" value="i9">i9</option>
            </select>
        </div>
        <div>Motherboard Options:</div>
        <div>
            <select name="motherboard" ng-model="motherboard">
                <option value="ASUS">ASUS</option>
                <option value="Gigabyte">Gigabyte</option>
                <option value="MSI">MSI</option>
                <option value="Any (Lowest Price)">Any (Lowest Price)</option>
                <option value="Any (Highest Price)">Any (Highest Price)</option>
            </select>
        </div>
        <div>Graphics Options:</div>
        <div>
            <select name="graphics" ng-model="graphics">
                <option value="integrated">Integrated (Lowest Price)</option>
                <option value="Radeon">Radeon</option>
                <option value="GeForce">GeForce</option>
            </select>
        </div>
        <div>Color Preference:</div>
        <div>
            <input type="text" placeholder="(Optional)" id="colorPref" ng-model="colorPref" />
        </div>
        <div class="sectionHeading" style="grid-column: 1 / span 4; font-weight: bold; border: none;">Memory:</div>
        <div>Quantity of Sticks:</div>
        <div>
            <select name="numOfSticks" ng-model="numOfSticks">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div>Memory per Stick:</div>
        <div>
            <select name="memPerStick" ng-model="memPerStick">
                <option value="1">1 GB</option>
                <option value="2">2 GB</option>
                <option value="4">4 GB</option>
                <option value="8">8 GB</option>
                <option value="16">16 GB</option>
                <option value="32">32 GB</option>
            </select>
        </div>
    </div>
    <input class="submit" type="submit" value="Review Order" />
</form>

<div name="orderReview" class="main" ng-show="orderReview">
    <div class="row">
        <div class="grid">
            <div>Name: <br /> {{name}}</div>
            <div>Email: <br /> {{email}}</div>
            <div>Phone: <br /> {{phone}}</div>
            <div>Contact Preference: <br /> {{contactPref}}</div>
        </div>
    </div>
    <div class="row">
        <button class="submit" ng-click="editOrder()">Edit Order</button>
        <button class="submit" ng-click="sendOrder()">Send Order</button>
    </div>
</div>