<section class="bg-light col-8 float-left">
    <h2 class="text-lg-center">Order Request</h2>
    <div class="card text-center">
        <!-- Navigation Tabs for Order -->
        <div class="card-header">
            <!-- Work on adding cool icons for each, then graying out any that aren't applicable to the order -->
            <ul class="nav nav-tabs card-header-tabs">
                <!-- Show Active Tab when Active -->
                <!-- Hide Inactive Tab when Active -->
                <li class="nav-item" ng-show="tab == 'contact'">
                    <a class="nav-link active" href="#" ng-click="contactView()">Contact</a>
                </li>
                <li class="nav-item" ng-hide="tab == 'contact'">
                    <a class="nav-link" href="#" ng-click="contactView()">Contact</a>
                </li>
                <li class="nav-item" ng-show="tab == 'order'">
                    <a class="nav-link active" href="#" ng-click="contactView()">Order Details</a>
                </li>
                <li class="nav-item" ng-hide="tab == 'order'">
                    <a class="nav-link" href="#" ng-click="orderView()">Order Details</a>
                </li>
                <li class="nav-item" ng-show="tab == 'address'">
                    <a class="nav-link active" href="#" ng-click="contactView()">Address</a>
                </li>
                <li class="nav-item" ng-hide="tab == 'address'">
                    <a class="nav-link" href="#" ng-click="addressView()">Address</a>
                </li>
                <li class="nav-item" ng-show="tab == 'build'">
                    <a class="nav-link active" href="#" ng-click="contactView()">Build Details</a>
                </li>
