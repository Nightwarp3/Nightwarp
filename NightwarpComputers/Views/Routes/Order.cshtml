<aside class="bg-dark text-light col-lg-2 float-left">
    <div class="container">
        <div class="row text-center">
            <div class="col-12">Fee Breakdown:</div>
        </div>
        <div class="row">
            <div class="col-6"><i>Order Fee:</i></div>
            <div class="col-6">${{fees.orderFee}}</div>
        </div>
        <div class="row">
            <div class="col-6"><i>Build Fee:</i></div>
            <div class="col-6">${{fees.buildFee}}</div>
        </div>
        <div class="row text-center">
            <div class="col-12 border-light">Fee Total: ${{feeTotal}}</div>
        </div>
    </div>
</aside>

<section class="col-lg-8 float-left">
    <h2 class="text-lg-center">Order Request</h2>
    <div class="card text-center">
        <!-- Navigation Tabs for Order -->
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" ng-class="{active: tab == 'contact'}" href="#" ng-click="nextView('contact')">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" ng-class="{active: tab == 'order'}" href="#" ng-click="nextView('order')">Order Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" ng-class="{active: tab == 'address', disabled: formData.deliveryType != 'ship' && formData.buildType != 'orderOnly'}" href="#" ng-click="nextView('address')">Address</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" ng-class="{active: tab == 'build', disabled: formData.buildType != 'buildOnly' && formData.buildType != 'orderBuild'}" href="#" ng-click="nextView('build')">Build Details</a>
                </li>
            </ul>
        </div>

        <!-- Contact Information -->
        <div class="card-body" ng-show="tab == 'contact'">
            <h5 class="card-title">Contact Information</h5>
            <div class="row">
                <div class="col-12 mx-auto">
                    <form ng-submit="nextView('order')">
                        <div class="form-row justify-content-center">
                            <div class="col-6 col-md-5 m-2">
                                <input type="text" class="form-control form-control-sm" placeholder="Full Name" ng-maxlength="100" required ng-model="formData.name" />
                            </div>
                            <div class="col-6 col-md-5 m-2">
                                <div class="col-12">
                                    <label class="d-lg-inline">Contact Preference:</label>
                                    <label class="col-lg-4 d-lg-inline">
                                        <input type="checkbox" id="emailPref" value="Email" ng-model="emailPref" />Email
                                    </label>
                                    <label class="col-lg-4 d-lg-inline">
                                        <input type="checkbox" id="phonePref" value="Phone" ng-model="phonePref" />Phone
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col-6 col-md-5 m-2">
                                <input type="email" class="form-control form-control-sm" placeholder="Email Address" required ng-model="formData.email" />
                            </div>
                            <div class="col-6 col-md-5 m-2">
                                <input type="text" class="form-control form-control-sm" id="phone" placeholder="Phone (123-456-789)" pattern="1?-?(\d{3}-?){2}\d{4}" title="1-555-555-5555 or 555-555-5555" ng-model="formData.phone" />
                            </div>
                        </div>
                        <div class="col-12 justify-content-center mt-5">
                            <button class="btn-secondary float-left" disabled>Previous</button>
                            <button type="submit" class="btn-dark float-right">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Order Details -->
        <div class="card-body" ng-show="tab == 'order'">
            <h5 class="card-title">Order Information</h5>
            <div class="row">
                <div class="col-12 mx-auto">
                    <form ng-submit="nextView('address')">
                        <div class="form-row justify-content-center">
                            <div class="col-12 col-md-9 m-3">
                                <label class="d-lg-inline m-3">
                                    <input type="radio" name="buildType" required value="orderOnly" ng-change="recalculateOrder()" ng-model="formData.buildType">Order Only
                                </label>
                                <label class="d-lg-inline m-3">
                                    <input type="radio" name="buildType" required value="buildOnly" ng-change="recalculateOrder()" ng-model="formData.buildType">Build Only
                                </label>
                                <label class="d-lg-inline m-3">
                                    <input type="radio" name="buildType" required value="orderBuild" ng-change="recalculateOrder()" ng-model="formData.buildType">Order and Build
                                </label>
                            </div>
                        </div>
                        <div class="form-row justify-content-center" ng-show="formData.buildType == 'orderOnly' || formData.buildType == 'orderBuild'">
                            <div class="col-6 col-md-5 m-2">
                                <select class="form-control form-control-sm" ng-model="formData.useType">
                                    <option value="" disabled selected hidden>Expected Use...</option>
                                    <option value="Gaming">Gaming</option>
                                    <option value="Basic, Every Day Use">Basic, Every Day Use</option>
                                    <option value="Audio/Video Production">Audio/Video Production</option>
                                </select>
                            </div>
                            <div class="col-6 col-md-5 m-2">
                                <input type="text" class="form-control form-control-sm" ng-required="formData.buildType == 'orderOnly' || formData.buildType == 'orderBuild'" placeholder="Price Limit (1000.00)" title="1000.00" pattern="(\d{0,3})*\.\d{2}" ng-model="formData.priceLimit" />
                            </div>
                        </div>
                        <div class="form-row justify-content-center" ng-show="formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild'">
                            <div class="col-12 col-md-9 m-3">
                                <label class="d-lg-inline m-3">
                                    <input type="radio" name="deliveryType" ng-required="formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild'" value="ship" ng-model="formData.deliveryType">Ship to You
                                </label>
                                <label class="d-lg-inline m-3">
                                    <input type="radio" name="deliveryType" ng-required="formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild'" value="pickup" ng-model="formData.deliveryType">Pickup in Person
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12 justify-content-center mt-5">
                    <button class="btn-secondary float-left" ng-click="nextView('contact')">Previous</button>
                    <button class="btn-dark float-right" type="submit">Next</button>
                    <!--<button class="submit btn-primary float-right" ng-show="!((formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild') || (formData.deliveryType == 'ship' || formData.buildType == 'orderOnly'))" ng-click="submitOrder()">Submit Order</button>-->
                    <!-- Add this back in eventually when the "disable non-required tabs" logic is figured out. -->
                </div>
            </div>
        </div>

        <!-- Shipping Information -->
        <div class="card-body" ng-show="tab == 'address'">
            <h5 class="card-title">Address Information</h5>
            <div class="row">
                <div class="col-12 mx-auto">
                    <form ng-submit="nextView('build')">
                        <div class="form-row justify-content-center">
                            <div class="col-6 col-md-5 m-3">
                                <input type="text" class="form-control form-control-sm" placeholder="Street Address" ng-required="formData.deliveryType == 'ship' || formData.buildType == 'orderOnly'" ng-model="formData.streetAddress" />
                            </div>
                            <div class="col-6 col-md-5 m-3">
                                <input type="text" class="form-control form-control-sm" placeholder="City" ng-required="formData.deliveryType == 'ship' || formData.buildType == 'orderOnly'" ng-model="formData.city" />
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col-6 col-md-5 m-3">
                                <select name="state" class="form-control form-control-sm" ng-required="formData.deliveryType == 'ship' || formData.buildType == 'orderOnly'" ng-model="formData.state">
                                    <option selected hidden value="">Select State...</option>
                                    <option ng-repeat="state in states" value="{{state}}">{{state}}</option>
                                </select>
                            </div>
                            <div class="col-6 col-md-5 m-3">
                                <input type="text" class="form-control form-control-sm" placeholder="Zip (55555)" ng-required="formData.deliveryType == 'ship' || formData.buildType == 'orderOnly'" ng-maxlength="5" ng-model="formData.zip" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12 justify-content-center mt-5">
                    <button class="btn-secondary float-left" ng-click="nextView('order')">Previous</button>
                    <button class="btn-dark float-right" type="submit">Next</button>
                    <!--<button class="submit btn-primary float-right" ng-show="!((formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild') || (formData.deliveryType == 'ship' || formData.buildType == 'orderOnly'))" ng-click="submitOrder()">Submit Order</button>-->
                    <!-- Add this back in eventually when the "disable non-required tabs" logic is figured out. -->
                </div>
            </div>
        </div>

        <!-- Build Information -->
        <div class="card-body" ng-show="tab == 'build'">
            <h5 class="card-title">Build Setup</h5>
            <div class="row">
                <div class="col-12 mx-auto">
                    <form ng-submit="submitOrder()">
                        <div class="form-row justify-content-center">
                            <div class="col-12 col-md-9 m-3">
                                <label class="d-lg-inline m-3">
                                    <input type="radio" ng-required="formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild'" name="partPreference" ng-change="recalculateOrder()" value="upload" ng-model="formData.partPreference">Parts List Link
                                </label>
                                <label class="d-lg-inline m-3">
                                    <input type="radio" ng-required="formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild'" name="partPreference" ng-change="recalculateOrder()" value="preferences" ng-model="formData.partPreference">Select Preferences
                                </label>
                                <label class="d-lg-inline m-3">
                                    <input type="radio" ng-required="formData.buildType == 'buildOnly' || formData.buildType == 'orderBuild'" name="partPreference" ng-change="recalculateOrder()" value="noPreference" ng-model="formData.partPreference">Builder's Choice
                                </label>
                            </div>
                        </div>
                        <div class="form-row justify-content-center" ng-show="formData.partPreference == 'upload'">
                            <div class="col-12 col-md-9 m-3">
                                <input type="url" class="form-control form-control-sm" ng-required="partPreference == 'upload'" placeholder="Parts List Link: (Amazon, Newegg, etc. list)" ng-model="formData.partsListLink" />
                            </div>
                        </div>
                        <div ng-show="formData.partPreference == 'preferences'">
                            <div class="form-row justify-content-center">
                                <div class="col-6 col-md-5 m-3">
                                    <select class="form-control form-control-sm" ng-model="formData.processorType">
                                        <option value="" hidden selected>Select a Processor Type...</option>
                                        <option value="AMD">AMD (AM4 socket)</option>
                                        <option value="Intel">Intel (LGA 1151)</option>
                                    </select>
                                </div>
                                <div class="col-6 col-md-5 m-3">
                                    <select class="form-control form-control-sm" ng-disabled="formData.processorType != 'AMD' && formData.processorType != 'Intel'" ng-model="formData.processorModel">
                                        <option value="" hidden selected>Select a Processor Model...</option>
                                        <option ng-show="formData.processorType == 'AMD'" value="Ryzen 3">Ryzen 3</option>
                                        <option ng-show="formData.processorType == 'AMD'" value="Ryzen 5">Ryzen 5</option>
                                        <option ng-show="formData.processorType == 'AMD'" value="Ryzen 7">Ryzen 7</option>
                                        <option ng-show="formData.processorType == 'AMD'" value="Ryzen Threadripper">Ryzen Threadripper</option>
                                        <option ng-show="formData.processorType == 'Intel'" value="i3">i3</option>
                                        <option ng-show="formData.processorType == 'Intel'" value="i5">i5</option>
                                        <option ng-show="formData.processorType == 'Intel'" value="i7">i7</option>
                                        <option ng-show="formData.processorType == 'Intel'" value="i9">i9</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row justify-content-center">
                                <div class="col-6 col-md-5 m-3">
                                    <select class="form-control form-control-sm" ng-model="formData.numOfSticks">
                                        <option value="" hidden selected>Select Number of Memory Sticks...</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                </div>
                                <div class="col-6 col-md-5 m-3">
                                    <select class="form-control form-control-sm" ng-model="formData.memPerStick">
                                        <option value="" hidden selected>Select Memory Size per Stick...</option>
                                        <option value="1">1 GB</option>
                                        <option value="2">2 GB</option>
                                        <option value="4">4 GB</option>
                                        <option value="8">8 GB</option>
                                        <option value="16">16 GB</option>
                                        <option value="32">32 GB</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row justify-content-center">
                                <div class="col-6 col-md-5 m-3">
                                    <select class="form-control form-control-sm" ng-model="formData.motherboard">
                                        <option value="" hidden selected>Select a Motherboard Model...</option>
                                        <option value="ASUS">ASUS</option>
                                        <option value="Gigabyte">Gigabyte</option>
                                        <option value="MSI">MSI</option>
                                        <option value="Any (Lowest Price)">Any (Lowest Price)</option>
                                        <option value="Any (Highest Price)">Any (Highest Price)</option>
                                    </select>
                                </div>
                                <div class="col-6 col-md-5 m-3">
                                    <select class="form-control form-control-sm" ng-model="formData.graphics">
                                        <option value="" hidden selected>Select a Graphics Option...</option>
                                        <option value="integrated">Integrated (Lowest Price)</option>
                                        <option value="Radeon">Radeon</option>
                                        <option value="GeForce">GeForce</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row justify-content-center">
                                <div class="col-6 col-md-5 m-3">
                                    <input type="text" class="form-control form-control-sm" placeholder="Color Preference (Optional)" ng-model="formData.colorPref" />
                                </div>
                                <div class="col-6 col-md-5 m-3">
                                    <label for="extras">Extras:</label>
                                    <select multiple class="form-control form-control-sm" id="extras" ng-model="extras">
                                        <option>DVD Drive</option>
                                        <option>Blu-Ray Drive</option>
                                        <option>Blu-Ray Drive (Writable)</option>
                                        <option>LED Case Lights</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12 justify-content-center mt-5">
                    <button class="btn-secondary float-left" ng-click="nextView('order')">Previous</button>
                    <button class="btn-primary float-right" type="submit">Submit Order</button>
                </div>
            </div>
        </div>
    </div>
</section>

<aside class="col-lg-2 float-left">
    <div class="container">
        <div class="row">
            <img class="col-lg-12 col-sm-2" src="~/Content/Images/bg-showcase-3.jpg" />
        </div>
    </div>
</aside>